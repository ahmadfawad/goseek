<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.softsolution.goseek.fragments.jobSeeker.NewJobSeekerFragment" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/appbarlayout_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:onClick="@{(view)->fragment.onclick(view)}"
                        android:background="@android:color/transparent"
                        android:id="@+id/back"
                        android:paddingLeft="0dp"
                        android:insetLeft="0dp"
                        app:icon="@drawable/ic_move_left"
                        app:iconGravity="start"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="20dp"
                        android:text="New Job Seeker"
                        android:textColor="@android:color/white" />


                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <com.github.captain_miao.optroundcardview.OptRoundCardView
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            app:behavior_hideable="true"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:optRoundCardBackgroundColor="@color/white"
            app:optRoundCardCornerRadius="35dp"
            app:optRoundCardLeftBottomCorner="false"
            app:optRoundCardRightBottomCorner="false">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:scrollbars="none"
                android:fillViewport="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                   <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="20dp"
                        android:id="@+id/textField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:paddingStart="0dp"
                       android:paddingEnd="0dp"
                        android:hint="Name :"
                        app:hintTextColor="#848484"
                        android:backgroundTint="@color/hint"
                        app:boxBackgroundColor="@android:color/transparent"
                        android:background="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:textColor="@color/black"
                            android:nextFocusForward="@id/etEmail"
                            android:fontFamily="@font/roboto_regular"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            android:drawableTint="@color/hint"
                            android:drawableRight="@drawable/user_grey"

                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email :"
                        android:layout_marginTop="10dp"
                        app:hintTextColor="#848484"
                        android:backgroundTint="@color/hint"
                        app:boxBackgroundColor="@android:color/transparent"
                        android:background="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="0dp"
                            android:id="@+id/etEmail"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@id/etCode"
                            android:paddingEnd="0dp"
                            android:textColor="@color/black"
                            android:drawableTint="@color/hint"
                            android:fontFamily="@font/roboto_regular"
                            android:drawableRight="@drawable/ic_msg"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.0">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:hintTextColor="#848484"
                            android:paddingLeft="0dp"
                            android:hint="Mobile #"
                            android:backgroundTint="@color/hint"
                            app:boxBackgroundColor="@android:color/transparent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:nextFocusForward="@id/etMobileNumber"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_regular"
                                android:inputType="number"
                                android:maxLength="3"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight="0.69"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:hintTextColor="#848484"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="@color/hint"
                            app:boxBackgroundColor="@android:color/transparent"
                            android:background="@android:color/transparent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="true"
                                android:id="@+id/etMobileNumber"
                                android:inputType="phone"
                                android:paddingStart="0dp"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:nextFocusForward="@id/etPassword"
                                android:paddingEnd="0dp"
                                android:drawableTint="@color/hint"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_regular"
                                android:drawableRight="@drawable/ic_phone"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password :"
                        android:layout_marginTop="10dp"
                        app:hintTextColor="#848484"
                        android:backgroundTint="@color/hint"
                        app:passwordToggleEnabled="false"
                        app:boxBackgroundColor="@android:color/transparent"
                        android:background="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="0dp"
                            android:id="@+id/etPassword"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@id/etConfirmPassword"
                            android:paddingEnd="0dp"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:drawableTint="@color/hint"
                            android:drawableRight="@drawable/ic_lock_pass"
                            android:fontFamily="@font/roboto_regular"
                            android:paddingLeft="0dp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Password :"
                        android:layout_marginTop="10dp"
                        app:hintTextColor="#848484"
                        android:backgroundTint="@color/hint"
                        app:passwordToggleEnabled="false"
                        app:boxBackgroundColor="@android:color/transparent"
                        android:background="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            android:id="@+id/etConfirmPassword"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            android:nextFocusForward="@id/next"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:drawableTint="@color/hint"
                            android:drawableRight="@drawable/ic_lock_pass"
                            android:fontFamily="@font/roboto_regular"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cbTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_light"
                        android:paddingStart="10dp"
                        android:layout_margin="0dp"
                        android:paddingEnd="5dp"
                        android:text="I agree with Go Seek Terms of Service &amp; Privacy Policy."
                        android:textSize="10sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_marginTop="20dp"
                        android:padding="15dp"
                        app:cornerRadius="5dp"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:letterSpacing="0"
                        android:onClick="@{(view)->fragment.onclick(view)}"
                        android:id="@+id/next"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_bold"
                        android:backgroundTint="#F87062"/>



                </LinearLayout>

            </ScrollView>
        </com.github.captain_miao.optroundcardview.OptRoundCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="5dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:text="By Creating an account, you agree to Go Seek\nTerms of Service &amp; Privacy" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>