<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:id="@+id/btn"
            android:backgroundTint="#EEF9F2"
            app:cornerRadius="25dp"
            app:icon="@drawable/ic_green_dot"
            app:iconGravity="textStart"
            android:letterSpacing="0"
            android:includeFontPadding="false"
            android:justificationMode="inter_word"
            app:iconPadding="3dp"
            android:minHeight="45dp"
            android:minWidth="80dp"
            android:textAllCaps="false"
            android:padding="0dp"
            android:textSize="12sp"
            android:layout_margin="0dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Active"
            android:textColor="#56C07F"
            app:iconTintMode="multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/designation_description"
            android:layout_marginTop="0dp"
            android:text="Waiter help Wanted"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/calender"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:backgroundTint="@color/lightGrey"
                    android:src="@drawable/ic_calender"
                    app:layout_constraintEnd_toStartOf="@+id/calender_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/calender_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="5dp"
                    android:text="10 Jun,2021"
                    android:textColor="@color/lightGrey"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/calender"/>


                <!--               <ImageView
                                   android:id="@+id/calender"
                                   app:layout_constraintEnd_toStartOf="@id/calender_text"
                                   app:layout_constraintTop_toTopOf="parent"
                                   app:layout_constraintBottom_toBottomOf="parent"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:background="@color/transparent"
                                   android:backgroundTint="@color/lightGrey"
                                   android:src="@drawable/ic_calender" />

                               <TextView
                                   android:id="@+id/calender_text"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:fontFamily="@font/roboto_regular"
                                   android:layout_marginLeft="15dp"
                                   android:text="10 Jun,2021"
                                   android:textColor="@color/lightGrey"
                                   android:textSize="12dp"
                                   app:layout_constraintTop_toTopOf="parent"
                                   app:layout_constraintBottom_toBottomOf="parent"
                                   app:layout_constraintEnd_toEndOf="parent" />  -->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/location"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightGrey"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="2 Job Seekers"/>

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>