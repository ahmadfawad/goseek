<?xml version="1.0" encoding="utf-8"?>
<com.github.captain_miao.optroundcardview.OptRoundCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:optRoundCardCornerRadius="25dp"
    app:optRoundCardLeftBottomCorner="false"
    app:optRoundCardRightBottomCorner="false"
    android:elevation="@dimen/opt_round_card_view_compat_inset_shadow"
    app:optRoundCardBackgroundColor="@color/white"
    android:id="@+id/bottom_sheet"
    android:padding="16dp"
    app:behavior_peekHeight="55dp"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

    <TextView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:id="@+id/pause"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="@{(view)->fragment.onClick(view)}"
        android:background="@drawable/background_round_corners_list_view"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center_vertical"
        android:text="Pause"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_pause" />

    <TextView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:id="@+id/edit"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="@{(view)->fragment.onClick(view)}"
        android:background="@drawable/background_round_corners_list_view"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center_vertical"
        android:text="Edit"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_edit_black" />
    </LinearLayout>
</com.github.captain_miao.optroundcardview.OptRoundCardView>