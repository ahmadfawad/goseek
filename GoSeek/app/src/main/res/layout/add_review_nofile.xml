<?xml version="1.0" encoding="utf-8"?>
<com.github.captain_miao.optroundcardview.OptRoundCardView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
app:optRoundCardCornerRadius="0dp"
android:elevation="@dimen/opt_round_card_view_compat_inset_shadow"
app:optRoundCardBackgroundColor="@color/white"
android:id="@+id/bottom_sheet"

app:behavior_peekHeight="55dp"
app:behavior_hideable="true"
app:layout_behavior="@string/bottom_sheet_behavior">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_gravity="right"
        android:id="@+id/cross"
        android:background="@color/transparent"
        app:icon="@drawable/ic_cross"
        app:iconTint="@color/hint"
        app:iconGravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="@color/black"
        android:text="Waiter Help Needed"/>


    <TextView
        android:layout_marginTop="8dp"
        android:text="By ABC Company Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>


    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Your profile does not have a CV"
        android:textColor="@color/pink"
        android:fontFamily="@font/roboto_regular"
        android:textSize="12dp"/>


    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        android:background="@drawable/dashed_background">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:text="Attach a CV"
            android:letterSpacing="0"
            app:icon="@drawable/ic_file_sign"
            app:iconTint="@color/hint"
            app:iconGravity="textStart"
            android:padding="3dp"
            android:textColor="@color/hint"
            android:textAllCaps="false"
            android:gravity="center"
            android:backgroundTint="@color/white"/>

    </RelativeLayout>


    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="10dp"
        android:padding="15dp"
        app:cornerRadius="5dp"
        android:id="@+id/confirm_button"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm To Apply"
        android:textSize="14dp"
        android:letterSpacing="0"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:backgroundTint="#F87062"/>
</LinearLayout>
</com.github.captain_miao.optroundcardview.OptRoundCardView>
